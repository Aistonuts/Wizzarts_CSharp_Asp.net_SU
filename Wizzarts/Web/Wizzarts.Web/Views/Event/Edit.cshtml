@model Wizzarts.Web.ViewModels.Event.EditEventViewModel
@{
    this.ViewData["Title"] = "Edit event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-2">
    <div class="col-md-12 pl-0 pr-0">
        <div class="card border-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <h3 class="ff-display">Update event</h3>
                        <div class="card-body pt-2 pb-1">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Title"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Title" class="form-control" placeholder="Title">
                                    </div>
                                    <span asp-validation-for="Title" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="EventDescription">Description</label>
                                    <div class="col-sm-8 col-lg-6">
                                        <textarea asp-for="EventDescription" style="height:100px;" cols="60" rows="10" class="form-control" placeholder="Event Description"></textarea>
                                    </div>
                                    <span asp-validation-for="EventDescription" class="small text-danger"></span>
                                </div>
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-light">
                                            <span class="fas fa-plus"></span> <b>Update</b>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="card mb-2">
                            @if (this.Model.EventComponents.Any())
                            {
                                <div class="w-100 text-center ae-border-bottom-light"><h4>Event content</h4></div>
                                <div class="card-body pl-1 pr-1 pt-2 pb-0">

                                    @foreach (var events in this.Model.EventComponents)
                                    {
                                        <div class="metagroup-container">
                                            <div class="mr-2 d-none d-lg-block">
                                                <div class="image-wrapper">
                                                    <div class="meta-cardimg" style="background-image: url('@events.ImageUrl')"></div>
                                                </div>
                                            </div>
                                            <div>
                                                <b class="text-primary">@events.Title</b>
                                                <a asp-controller="Event" asp-action="Remove" asp-route-id="@events.Id" class="image-wrapper">

                                                    <b type="submit" class="btn btn-light">
                                                        <span class="fas fa-minus"></span> <b>Delete</b>
                                                    </b>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            <div class="col-sm-8">
                                <a asp-area="" asp-controller="Event" asp-action="My" asp-route-id="@Model.Id" class="image-wrapper">
                                    <div class="btn btn-light">
                                        <span class="fas fa-plus"></span> <b>Add component</b>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
