@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Wizzarts.Web.Infrastructure.Extensions
@model Wizzarts.Web.ViewModels.Article.CreateArticleViewModel

@{
    this.ViewData["Title"] = "Create article";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pt-2">
    <div class="col-md-12 pl-0 pr-0">
        <div class="card border-0">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-7">
                        <div class="w-100 text-center ae-border-bottom-light"><h4><a class="metagroup-link ff-display">Create new article</a></h4></div>
                        <div class="card-body pt-2 pb-1">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Title"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="Title" class="form-control" placeholder="Title">
                                    </div>
                                    <span asp-validation-for="Title" class="small text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="ShortDescription">Short Description</label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="ShortDescription" class="form-control" placeholder="Article Short Description">
                                    </div>
                                    <span asp-validation-for="ShortDescription" class="small text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="Description"></label>
                                    <div class="col-sm-8 col-lg-6">
                                        <textarea asp-for="Description" class="form-control" placeholder="Article Description"> </textarea>
                                    </div>
                                    <span asp-validation-for="Description" class="small text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-lg-2 col-form-label" asp-for="ImageUrl">Image</label>
                                    <div class="col-sm-8 col-lg-6">
                                        <input asp-for="ImageUrl" class="form-control" placeholder="Your Article Image">
                                    </div>
                                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group row mb-1">
                                    <label class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-8">
                                        <button type="submit" class="btn btn-light">
                                            <span class="fas fa-plus"></span> <b>Create</b>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="card mb-2">
                            <div class="w-100 text-center ae-border-bottom-light"><h4><a class="metagroup-link ff-display">Articles</a></h4></div>
                            <div class="card-body pl-1 pr-1 pt-2 pb-0">
                                @foreach (var article in this.Model.Articles)
                                {
                                    <div class="metagroup-container">
                                        <div class="mr-2 d-none d-lg-block">
                                            <a asp-controller="Article" asp-action="ById" asp-route-id="@article.Id" asp-route-information="@article.GetArticleTitle()" class="image-wrapper">
                                                <img class="meta-cardimg" style="background-image: url('@article.ImageUrl')" alt="">
                                            </a>
                                        </div>
                                        <div>
                                            <a asp-controller="Article" asp-action="ById" asp-route-id="@article.Id" asp-route-information="@article.GetArticleTitle()" class="image-wrapper">
                                                <b class="text-primary">@article.Title</b>
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>