@model Wizzarts.Web.ViewModels.Deck.DeckListViewModel
@using Wizzarts.Web.Infrastructure.Extensions
@{
    this.ViewData["Title"] = "All card decks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row pt-2">
    <div class="col-md-12 col-lg-12 col-xl-9 pl-0 pr-0 pr-xl-1">
        <div class="card">
            <div class="card-body">
                <div class="w-100 span-all mb-5 mt-5">
                    @if (!Model.Decks.Any())
                    {
                        <div class="d-flex flex-row justify-content-center">
                            <div class="font-weight-bold mt-5" style="max-width: 500px;">
                                <a asp-controller="Deck" asp-action="Create" class="image-wrapper"> <h4 class="text-center mb-2 ae-border-bottom-light text-header-gold">Create new deck</h4></a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div id="creatorCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                            <div class="carousel-inner">

                                @for (var i = 0; i < this.Model.Decks.Count(); i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item active">
                                            <div class="d-flex flex-row justify-content-center featured-creator-cards">

                                                <div class="video-card card border-0">
                                                    <div class="yt-img">
                                                        <a asp-controller="Deck" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].Id" asp-route-information="@this.Model.Decks.ToList()[i].GetDeckName()">
                                                            <img src="@this.Model.Decks.ToList()[i].ImageUrl" alt="@this.Model.Decks.ToList()[i].Name" class="lazy" alt="video" style="">

                                                        </a>
                                                    </div>
                                                   
                                                    @if (this.Model.Decks.ToList()[i].CreatedByMember.Length > 0)
                                                    {
                                                        <div class="card-body p-0">
                                                            <small class="text-center mb-1 text-muted">
                                                                <a asp-controller="User" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].CreatedByUser" asp-route-information="@this.Model.Decks.ToList()[i].GetWizzartsMemberName()"><i class="far fa-star"></i>@this.Model.Decks.ToList()[i].CreatedByMember</a>
                                                            </small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="card-body p-0">
                                                            <small class="text-center mb-1 text-muted">
                                                                <a asp-controller="User" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].CreatedByUser" asp-route-information="@this.Model.Decks.ToList()[i].GetWizzartsMemberName()"><i class="far fa-star"></i>@this.Model.Decks.ToList()[i].CreatedByUser</a>
                                                            </small>
                                                        </div>
                                                    }
                                                    <div class="article-card card border-0">
                                                        <div class="card-body pt-0">
                                                            <div class="ff-display font-size-18">
                                                                <b>@this.Model.Decks.ToList()[i].Name</b>
                                                            </div>
                                                            <div class="card-text d-none d-md-flex m-1">@this.Model.Decks.ToList()[i].Description</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <div class="d-flex flex-row justify-content-center featured-creator-cards">

                                                <div class="video-card card border-0">
                                                    <div class="yt-img">
                                                        <a asp-controller="Deck" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].Id" asp-route-information="@this.Model.Decks.ToList()[i].GetDeckName()">
                                                            <img src="@this.Model.Decks.ToList()[i].ImageUrl" alt="@this.Model.Decks.ToList()[i].Name" class="lazy" alt="video" style="">
                                                        </a>
                                                    </div>
                                                    
                                                    @if (this.Model.Decks.ToList()[i].CreatedByMember.Length > 0)
                                                    {
                                                        <div class="card-body p-0">
                                                            <small class="text-center mb-1 text-muted">
                                                                <a asp-controller="User" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].CreatedByUser" asp-route-information="@this.Model.Decks.ToList()[i].GetWizzartsMemberName()"><i class="far fa-star"></i>@this.Model.Decks.ToList()[i].CreatedByMember</a>
                                                            </small>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="card-body p-0">
                                                            <small class="text-center mb-1 text-muted">
                                                                <a asp-controller="User" asp-action="ById" asp-route-id="@this.Model.Decks.ToList()[i].CreatedByUser" asp-route-information="@this.Model.Decks.ToList()[i].GetWizzartsMemberName()"><i class="far fa-star"></i>@this.Model.Decks.ToList()[i].CreatedByUser</a>
                                                            </small>
                                                        </div>
                                                    }
                                                    <div class="article-card card border-0">
                                                        <div class="card-body pt-0">
                                                            <div class="ff-display font-size-18">
                                                                <b>@this.Model.Decks.ToList()[i].Name</b>
                                                            </div>
                                                            <div class="card-text d-none d-md-flex m-1">@this.Model.Decks.ToList()[i].Description</div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            <a class="carousel-control-prev" href="#creatorCarousel" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#creatorCarousel" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 col-lg-12 col-xl-3 pl-0 pr-0">
        <div class="card mb-2">
            <div class="w-100 text-center ae-border-bottom-light"><h4><a class="metagroup-link ff-display">Events</a></h4></div>
            <div class="card-body pl-1 pr-1 pt-2 pb-0">
                @foreach (var events in this.Model.Events.Where(x => x.ApprovedByAdmin == true).Take(7))
                {
                    <div class="metagroup-container">
                        <div class="mr-2 d-none d-lg-block">
                            <a asp-controller="@events.ControllerName" asp-action="@events.ActionName" asp-route-id="@events.Id" asp-route-information="@events.GetEventTitle()" class="image-wrapper">
                                <img class="meta-cardimg" style="background-image: url('@events.ImageUrl')" alt="">
                            </a>
                        </div>
                        <div>
                            <a asp-controller="@events.ControllerName" asp-action="@events.ActionName" asp-route-id="@events.Id" asp-route-information="@events.GetEventTitle()" class="image-wrapper">
                                <b class="text-primary">@events.Title</b>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<hr />


@section Scripts {
    <script>
        $(document).ready(function () {
            $(function () {
                $('#creatorCarousel .lazy').lazy({
                    appendScroll: $('#lazy-container')
                });
            });
        });
    </script>
}
